<div class="show-page">
  <div>
    <p id="notice"><%= notice %></p>
    <p>
      <strong>Criada em:</strong>
      <%= @note.created_at.strftime("%d/%m/%Y") %>
    </p>
    <p>
      <strong>Proridade:</strong>
      <%= @note.priority %>
    </p>
  </div>
  <div>
    <header class="note-header">
      <h3>
        <%= @note.title %>
      </h3>
    </header>
    <div class="show-container-note">
      <%= @note.content %>
    </div>
    <%= link_to 'Editar', edit_note_path(@note) %> |
    <%= link_to 'Voltar', notes_path %>
    <%= link_to 'Delete', notes_path(@note), method: :delete, data: { confirm: "Tem certeza?" } %>
  </div>
</div>
